# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=1.0.0

# Frontend URLs (for CORS and email links)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astroluna_dev
DB_USER=postgres
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Cookie Configuration
COOKIE_SECRET=your-cookie-signing-secret-change-this

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
FROM_EMAIL=noreply@astroluna.ai
FROM_NAME=AstroLuna

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
AI_DEMO_MODE=true

# Rate Limiting
WHITELISTED_IPS=127.0.0.1,::1

# Payment Gateway (SPC)
SPC_MERCHANT_ID=your-spc-merchant-id
SPC_SECRET_KEY=your-spc-secret-key
SPC_ENDPOINT_URL=https://api.spcpay.com.ua
SPC_CURRENCY=UAH

# NBU (National Bank of Ukraine) API for currency conversion
NBU_API_URL=https://bank.gov.ua/NBUStatService/v1/statdirectory/exchange?json

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=15

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Redis (for production caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=astroluna:session:

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Features Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_AI_GENERATION=true
FEATURE_LIBRARY_EXPORT=true
FEATURE_PAYMENT_GATEWAY=true

# Development Tools
DEBUG_SQL=false
ENABLE_API_DOCS=true
ENABLE_CORS_DEBUG=false
# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=1.0.0

# Frontend URLs (for CORS and email links)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Database Configuration (using local PostgreSQL for development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astroluna_dev
DB_USER=postgres
DB_PASSWORD=password123

# JWT Configuration
JWT_SECRET=astroluna-super-secret-jwt-key-development-only-change-in-production
JWT_REFRESH_SECRET=astroluna-refresh-secret-development-only-change-in-production

# Cookie Configuration  
COOKIE_SECRET=astroluna-cookie-secret-development-only

# Email Configuration (development - use Gmail SMTP for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@astroluna.dev
SMTP_PASSWORD=test-password
FROM_EMAIL=noreply@astroluna.ai
FROM_NAME=AstroLuna

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
AI_DEMO_MODE=true

# Rate Limiting
WHITELISTED_IPS=127.0.0.1,::1

# Payment Gateway (SPC) - development sandbox
SPC_MERCHANT_ID=sandbox_merchant
SPC_SECRET_KEY=sandbox_secret_key
SPC_ENDPOINT_URL=https://sandbox-api.spcpay.com.ua
SPC_CURRENCY=UAH

# NBU API
NBU_API_URL=https://bank.gov.ua/NBUStatService/v1/statdirectory/exchange?json

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=15

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Features Flags (all enabled for development)
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true  
FEATURE_AI_GENERATION=true
FEATURE_LIBRARY_EXPORT=true
FEATURE_PAYMENT_GATEWAY=true

# Development Tools
DEBUG_SQL=true
ENABLE_API_DOCS=true
ENABLE_CORS_DEBUG=true
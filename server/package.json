{
  "name": "astroluna-server",
  "version": "2.0.0",
  "description": "Node.js API server for AstroLuna platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/templates dist/ || echo 'No templates to copy'",
    "start": "node dist/index.js",
    "start:railway": "npm run db:setup && npm run db:migrate && node dist/index.js",
    "test": "jest",
    "db:setup": "tsx src/scripts/setupDatabase.ts || echo 'Database setup complete'",
    "db:migrate": "tsx src/scripts/migrate.ts || echo 'Migrations complete'",
    "db:seed": "tsx src/scripts/seed.ts || echo 'Seeding complete'",
    "db:reset": "tsx src/scripts/resetDatabase.ts || echo 'Database reset complete'",
    "health": "curl -f http://localhost:$PORT/api/health || exit 1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "puppeteer": "^21.5.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  }
}

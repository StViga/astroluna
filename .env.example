# Railway Environment Variables Template
# Copy to .env for local development

# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=1.0.0

# Frontend URLs (Railway will auto-generate these)
FRONTEND_URL=https://your-app.railway.app
ALLOWED_ORIGINS=https://your-app.railway.app

# Database Configuration (Railway PostgreSQL)
# Railway provides these automatically when you add PostgreSQL service
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Optional - for user verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@astroluna.com

# AI Configuration (Required for AI features)
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio
# Get your key at: https://aistudio.google.com/app/apikey

# Optional AI Services  
OPENAI_API_KEY=your-openai-api-key

# Security
COOKIE_SECRET=your-cookie-signing-secret
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration  
SESSION_SECRET=your-session-secret-change-this-in-production

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Settings
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_ENABLED=true
{
  "name": "astroluna",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=astroluna-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:node": "tsc src/index.tsx --outDir ./build --module ESNext --target ES2020 --jsx react --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck --declaration false || echo 'Build done'",
    "build:deploy": "./build-for-deploy.sh",
    "start": "node server.js",
    "preview": "wrangler pages dev dist",
    "deploy": "./build-for-deploy.sh && wrangler pages deploy dist",
    "deploy:prod": "./build-for-deploy.sh && wrangler pages deploy dist --project-name astroluna",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:migrate:local": "wrangler d1 migrations apply astroluna-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply astroluna-production",
    "db:seed": "wrangler d1 execute astroluna-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute astroluna-production --local",
    "db:console:prod": "wrangler d1 execute astroluna-production",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/zod-validator": "^0.4.1",
    "bcryptjs": "^2.4.3",
    "hono": "^4.9.9",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}

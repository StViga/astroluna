{
  "name": "astroluna-platform",
  "version": "2.0.0",
  "description": "AI-powered astrology platform with React frontend and Node.js backend",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm run client:build && npm run server:build",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "start": "cd server && npm start",
    "start:railway": "cd server && npm run start:railway",
    "railway:build": "npm run install:all && npm run build",
    "railway:start": "npm run start:railway",
    "test": "cd server && npm test && cd ../client && npm test",
    "db:setup": "cd server && npm run db:setup",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "db:reset": "cd server && npm run db:reset",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "postinstall": "echo 'Root dependencies installed'"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}